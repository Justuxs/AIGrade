    <div class="d-flex align-items-center m-3 justify-content-between">
        <div>
            <button class="btn btn-outline-secondary rounded-pill"><i class="fas fa-arrow-left"></i> Previous</button>
        </div>
        @if (isAnswer)
        {
            <div class="mr-auto">
                <button class="btn btn-primary rounded-pill">Next <i class="fas fa-arrow-right"></i></button>
            </div>
        }
    </div>

</div>

@code {
    class SurveyData
    {
        public int Rating1 { get; set; } = 0;
        public int Rating2 { get; set; } = 0;
        public int Rating3 { get; set; } = 0;
        public int Rating4 { get; set; } = 0;
    }

    private bool isAnswer = true;

    private SurveyData surveyData = new SurveyData();

    private void ChangeFirstStatusDialog(int i)
    {
        surveyData.Rating1 = i;
    }
    private void ChangeSecondStatusDialog(int i)
    {
        surveyData.Rating2 = i;
    }
    private void ChangeThirdStatusDialog(int i)
    {
        surveyData.Rating3 = i;
    }
    private void ChangeForthStatusDialog(int i)
    {
        surveyData.Rating4 = i;
    }
    private void HandleSubmit()
    {
        // Implement your logic to handle submitted survey data (e.g., send to server, display results)
        Console.WriteLine($"Survey submitted: Rating1: {surveyData.Rating1}, Rating2: {surveyData.Rating2}, Rating3: {surveyData.Rating3}");
    }
}
